# ==========================================
# Database Configuration (MySQL - Hostgator)
# ==========================================
# MySQL database host
DB_HOST=host

# The port where MySQL is running (Default is 3306)
DB_PORT=3306

# The name of your MySQL database
MYSQL_DB_NAME=db_name

# Your MySQL database username
MYSQL_USER=user

# Your MySQL database password
MYSQL_PASSWORD=password

# ==========================================
# Security Configuration (JWT)
# ==========================================
JWT_SECRET=change_this_to_a_secure_random_secret_key_at_least_32_chars_long

# Token expiration time in milliseconds
# Examples: 
# 3600000 = 1 hour
# 8640000 = 2.4 hours
# 86400000 = 24 hours
JWT_EXPIRATION=8640000